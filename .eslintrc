
{
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "parser": "babel-eslint"
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "eqeqeq": "warn",
      "indent": ["warn", 2, { "SwitchCase": 1 }],
      "multiline-ternary": ["warn", "always-multiline"],
      "no-undef": "off",
      "no-unused-vars": "off",
    }
  }